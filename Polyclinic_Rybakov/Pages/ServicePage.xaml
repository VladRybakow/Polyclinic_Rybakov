<Page x:Class="Polyclinic_Rybakov.Pages.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Polyclinic_Rybakov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1440"
      MinHeight="640" MinWidth="820"
      Title="ServicePage">

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


        <Rectangle
            Grid.ColumnSpan="15"
            Grid.RowSpan="15"
            Fill="#CCEEFF"/>

        <Rectangle 
            Grid.ColumnSpan="15"
            Grid.RowSpan="12" Grid.Row="3"
            Fill="White"/>

        <Rectangle 
            Grid.ColumnSpan="15"
            Grid.Row="3" 
            Fill="#00B1F0"/>

        <Label 
            Grid.Row="3"
            Grid.Column="5" Grid.ColumnSpan="5"  
            Content="Выбор нужной вам услуги" 
            FontSize="24" FontWeight="Bold" FontFamily="Segoe Script"
            HorizontalAlignment="Left" VerticalAlignment="Center" Margin="56,12,0,9"/>

        <Image Source="..//Images/logo.png" 
               Grid.Column="6" Grid.ColumnSpan="3" 
               Grid.RowSpan="3"/>

        <Label 
            Grid.Row="5"
            Grid.Column="5" Grid.ColumnSpan="2"
            Content="Название" 
            FontSize="26" FontFamily="Tahoma"
            HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label 
            Grid.Row="5"
            Grid.Column="8" Grid.ColumnSpan="2"
            Content="Стоимость" 
            FontSize="26" FontFamily="Tahoma"
            HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label 
            Grid.Row="8"
            Grid.Column="5" Grid.ColumnSpan="2"
            Content="Врач" 
            FontSize="26" FontFamily="Tahoma"
            HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label 
            Grid.Row="8"
            Grid.Column="8" Grid.ColumnSpan="2"
            Content="Кабинет" 
            FontSize="26" FontFamily="Tahoma"
            HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label 
            Grid.Row="11"
            Grid.Column="6" Grid.ColumnSpan="2"
            Content="Время" 
            FontSize="26" FontFamily="Tahoma"
            HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Page>
