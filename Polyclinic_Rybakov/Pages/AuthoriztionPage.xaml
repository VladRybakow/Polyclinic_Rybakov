<Page x:Class="Polyclinic_Rybakov.Pages.AuthoriztionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Polyclinic_Rybakov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1440"
      MinHeight="640" MinWidth="820"
      Title="AuthoriztionPage" >

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle
            Grid.ColumnSpan="16"
            Grid.RowSpan="15"
            Fill="#FFE6E6E6"/>


        <Button
            Content="Авторизация"
            Grid.Column="6" Grid.Row="10"
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Height="66" Width="289" Click="AuthButton_Click"
            FontFamily="Segoe Script" FontSize="22" 
            BorderBrush="Black" Background="White" Grid.ColumnSpan="4"
            >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25" />
                </Style>
            </Button.Resources>
        </Button>

        <Button  
            Content="Регистация"
            Grid.Column="6" Grid.Row="12"
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Height="65" Width="288" Click="SignInButton_Click"
            FontFamily="Segoe Script" FontSize="22" 
            BorderBrush="Black" Background="White" Grid.ColumnSpan="3">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25" />
                </Style>
            </Button.Resources>
        </Button>

        <TextBox 
            x:Name="Login" Grid.Column="6" Grid.Row="5"
            HorizontalAlignment="Left"
            Margin="0,23,0,0" 
            Height="45" Width="288" FontSize="22" Grid.ColumnSpan="3"/>

        <TextBox 
            x:Name="Password" Grid.Column="6" Grid.Row="7"
            HorizontalAlignment="Left" 
            Margin="0,23,0,0" 
            Height="45" Width="288" FontSize="22" Grid.ColumnSpan="3"/>

        <Label Grid.Column="7" Grid.Row="5" Content="Логин" 
            HorizontalAlignment="Left" VerticalAlignment="Top" Width="96"
            FontFamily="Segoe Script" FontSize="18" Height="67"/>

        <Label Grid.Column="7" Grid.Row="7" Content="Пароль" 
            HorizontalAlignment="Left" VerticalAlignment="Top" Width="96"
            FontFamily="Segoe Script" FontSize="18" Height="67"/>
    </Grid>
</Page>
